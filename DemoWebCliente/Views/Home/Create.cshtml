@model DemoData.Emisores
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<div class="errorsFrm">
    @Html.Raw(ViewBag.Errors)
</div>

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row ">
        <div class="row col s12 l8 offset-l2">
            <div class="col s12">
                <div class="form-horizontal">
                    <h5>Agregar Capacitaciones</h5>
                    <div>
                        @Html.ActionLink("Regresar", "Index")
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="errorsFrm">
                        @Html.Raw(ViewBag.Errors)
                    </div>
                    <br />
                    <div class="input-field">
                        @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = " col-md-2" })
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "", @maxlength = "15" } })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>

                    <div class="">
                        @Html.LabelFor(model => model.Rfc, "Rfc", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Rfc, new { htmlAttributes = new { @class = "", @maxlength = "13" } })
                        @Html.ValidationMessageFor(model => model.Rfc, "", new { @class = "text-danger" })
                        <br />
                    </div>

                    <div class="input-field">
                        @Html.LabelFor(model => model.FechaInicioOperacion, "Fecha de Inicio", htmlAttributes: new { @class = "active" })
                        @Html.TextBoxFor(model => model.FechaInicioOperacion, "{0:dd/MM/yyyy}", htmlAttributes: new { @class = "datepicker", @type = "text" })
                        @Html.ValidationMessageFor(model => model.FechaInicioOperacion, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field col s12 l4">
                        @Html.LabelFor(model => model.Capital, "Capital", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Capital, new { htmlAttributes = new { @class = "form-control isdecimal", @onkeypress = "return soloDecimales(event)", @maxlength = "8" } })
                        @Html.ValidationMessageFor(model => model.Capital, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>}